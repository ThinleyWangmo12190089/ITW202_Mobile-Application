<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="20dp">

        <EditText
            android:id="@+id/messageETWebsite"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="http://www.google.com"
            android:textSize="20sp" />

       <Button
           android:id="@+id/Website"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:text="Open Website"
           android:onClick="Website"
           android:layout_below="@id/messageETWebsite"
           android:layout_marginLeft="120dp"/>

        <EditText
            android:id="@+id/messageETLocation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Message to send"
            android:textSize="20sp" />
        <Button
            android:id="@+id/Location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Open Location"
            android:onClick="Location"
            android:layout_below="@id/messageETLocation"
            android:layout_marginLeft="120dp"/>

        <EditText
            android:id="@+id/messageETShare"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="I am sharing this to you"
            android:textSize="20sp"/>
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Share This Text"
            android:layout_below="@id/messageETShare"
            android:layout_marginLeft="120dp"
            android:onClick="Share"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>